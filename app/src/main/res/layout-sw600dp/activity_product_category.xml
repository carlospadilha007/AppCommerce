<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".ProductCategoryActivity">

	<com.google.android.material.appbar.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<include layout="@layout/menu_toolbar_layout"
		         android:layout_width="match_parent"
		         android:layout_height="?attr/actionBarSize" />

	</com.google.android.material.appbar.AppBarLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<fragment
				android:id="@+id/fragment_product_category"
				android:name="br.com.arquitetoandroid.appcommerce.ProductCategoryFragment"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				tools:layout="@layout/fragment_product_category"/>

		<FrameLayout
				android:id="@+id/fragment_product"
				android:name="br.com.arquitetoandroid.appcommerce.ProductFragment"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				tools:layout="@layout/fragment_product"/>

	</LinearLayout>

</LinearLayout>